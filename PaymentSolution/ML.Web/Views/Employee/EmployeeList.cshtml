@using System.Web.Optimization
@using ML.Web.Helpers
@using PagedList.Mvc
@model PagedList.IPagedList<ML.PaymentSolution.Services.Contracts.Models.EmployeeModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employees";
}

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left header-textcolor hidden-xs" style="padding-top: 10px;">EMPLOYEE LIST</h4>
            <div class="input-group col-md-4 col-sm-6 col-xs-12 pull-right">
                <input type="text" class="form-control employeeKey" placeholder="Search Employee">
                <div class="input-group-btn">
                    <button class="btn btn-primary searchEmployee"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>
        @{ Html.RenderPartial("_partialemployeelist", Model); }
        @*@if (Model.Select(m => m.LastName).Take(1) != null)
            {

            }
            else
            {
                <h1 class="header-textcolor text-center">No Employee</h1>
            }*@

    </div>
    <div style="margin-top: -18px;">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
    <div style="margin-top: -18px;">
        @Html.PagedListPager(Model, page => Url.Action("EmployeeList", new { page }))
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Employee")
}
