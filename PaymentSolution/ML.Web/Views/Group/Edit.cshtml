<!--Add Employee-->
<div class="modal fade modal-add-group-employee" data-backdrop="static" data-refresh="true" data-keyboard="false" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title modal-text" id="myModalLabel">Add Employee to Group</h4>
            </div>
            <div class="modal-body">
                <div class="myModalContent"></div>
            </div><br />
            <div class="modal-footer">
                <div class="infomsg pull-left msg" style="font-size: 15px;display: none;"></div>
                <button type="button" class="btn btn-primary SaveEmployeeToGroup" data-url="@Url.Action("addmember", "Group", Request.Url.Scheme)">Add to Group</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!--Edit Salary-->
<div class="modal fade modal-edit-salary" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title modal-text" id="myModalLabel">Edit Salary</h4>
            </div>
            <div class="modal-body">
                <div class="modalsalarycontent"></div>
            </div><br />
            <div class="modal-footer">
                <div class="infomsg pull-left msg" style="font-size: 15px;display: none;"></div>
                <button type="button" class="btn btn-primary UpdateSalary" data-url="@Url.Action("editmembersalary", "Group", Request.Url.Scheme)">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!--Delete Employee-->
<div class="modal fade modal-sm-member-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title modal-text">Delete Employee</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove this employee from the group?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger DeleteEmployee"  data-employee="">Yes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section scripts
{
    @Scripts.Render("~/bundles/jquery.unobtrusive")
    @Scripts.Render("~/bundles/Group", "~/bundles/footables");
    <script type="text/javascript">
        $(function () {
            $('table').footable();
        });
    </script>
}