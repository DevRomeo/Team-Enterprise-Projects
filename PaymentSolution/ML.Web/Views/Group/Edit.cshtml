@using System.Web.Optimization
@using Glimpse.Core.ClientScript
@using ML.PaymentSolution.Services.Contracts.Responses
@using ML.Web.Helpers
@model ML.PaymentSolution.Services.Contracts.Responses.SearchGroupByIdResponse
@{
    ViewBag.Title = "Edit";
}

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left header-textcolor hidden-xs" style="padding-top: 10px;">Group Employee</h4>
            <div class="input-group col-md-4 col-sm-6 col-xs-12 input-group-sm pull-right">
                @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", @id = "groupname", data_group = Model.GroupId } })
                <div class="input-group-btn">
                    <button class="btn btn-primary btn-sm UpdateGroupName" data-url="@Url.Action("Update", "Group", Request.Url.Scheme)">Save</button>
                </div>
            </div>
        </div>
        
        <div id="refreshdata">
            @{ Html.RenderPartial("_partialeditemployeelist", Model.EmployeeData); }
        </div>        
        
    </div>
    <div>
        <button type="button" class="btn btn-default" onclick="location.href = '@Url.Action("grouplist", "Group" )'">
            <i class="glyphicon glyphicon-circle-arrow-left"></i> Back to Group
        </button>
    </div>

</div>

