@using ML.Web.Helpers
@model ML.PaymentSolution.Services.Contracts.Responses.SearchEmployeeResponse

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                View Detail
            </th>
        </tr>
    </thead>
    @if (Model.ResData != null)
    {
        <tbody>
            @foreach (var item in Model.ResData)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MiddleName)
                    </td>                    
                    <td>
                        <div class="pull-right">
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Details", "Details", "People", routeValues: new { id = item.KycId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
