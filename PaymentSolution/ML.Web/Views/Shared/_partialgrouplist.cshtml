@using System.Web.Optimization
@using System.Globalization
@using ML.Web.Helpers
@model PagedList.IPagedList<ML.PaymentSolution.Services.Contracts.Models.GroupModel>

<table class="table table-striped Groups">
    <thead>
        <tr>
            <th>
                Group Name
            </th>
            <th class="text-center" data-hide="phone">
                No. of Employee
            </th>
            <th class="text-right">
                Total Salary
            </th>
            <th>
                <button type="button" class="btn btn-primary pull-right btn-sm" data-toggle="modal" data-target=".modal-add-group">
                    <span class='glyphicon glyphicon-plus'></span>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.GroupName
                    </td>
                    <td class="text-center">@item.NoOfEmployee</td>
                    <td class="text-right">@item.TotalSalary.ToString("N", Cultures.Philippines)</td>
                    <td>
                        <div class="pull-right ui-group-buttons">

                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Group", routeValues: new { groupid = item.GroupId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default btn-sm" })
                            @*<div class="or"></div>
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "Group", routeValues: new { groupid = item.GroupId }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary btn-sm" })*@

                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>