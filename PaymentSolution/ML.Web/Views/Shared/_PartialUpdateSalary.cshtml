@model ML.Web.Models.EmployeeViewModel

<div class="form-group">

    <label class="control-label">Employee Name</label>
    <div class="input-group-sm">
        @Html.HiddenFor(m => m.kycId)
        @Html.EditorFor(m => m.employeelist, new { htmlAttributes = new { @class = "form-control", @readonly = true, @id = "employee" } })        
    </div>
    <br />
    @Html.LabelFor(model => model.salary, htmlAttributes: new { @class = "control-label" })

    @Html.EditorFor(model => model.salary, new { htmlAttributes = new { @class = "form-control pmtallocated pull-right", @style = "text-align:right", @id = "txtsalary" } })
    @Html.ValidationMessageFor(model => model.salary, "", new { @class = "text-danger" })
</div>
