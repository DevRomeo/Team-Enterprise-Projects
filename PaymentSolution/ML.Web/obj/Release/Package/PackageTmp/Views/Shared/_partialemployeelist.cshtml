@using ML.Web.Helpers
@model PagedList.IPagedList<ML.PaymentSolution.Services.Contracts.Models.EmployeeModel>

<table class="table table-striped Employees">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th class="text-center">
                First Name
            </th>
            <th class="text-center">
                Middle Name
            </th>
            <th>
                <div class="pull-right">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add New Employee", "Create", "Employee", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.MiddleName)
                    </td>
                    <td>
                        <div class="pull-right">

                            @*<span class="glyphicon glyphicon-pencil btn btn-default btn-sm EditEmployee" title="Edit Employee" data-employee='@item.EmpId'></span>*@

                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Employee", routeValues: new { empid = item.EmpId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default btn-sm" })
                            @*    &nbsp;
                                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "People", routeValues: new { id = item.KycId }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger btn-sm"})*@
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>