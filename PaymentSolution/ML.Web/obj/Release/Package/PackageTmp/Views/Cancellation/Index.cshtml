@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cancellation";
}

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="pull-left header-textcolor hidden-sm hidden-xs col-md-8 col-lg-8">Transaction Cancellation</h4>
            <div class="input-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <input type="text" placeholder="Search Invoice No / KPTN" class="form-control  cancellationkey" data-valid="^[0-9MLPmlp]$" maxlength="21" />
                <div class="input-group-btn">
                    <button class="btn btn-primary forcancellation" data-url="@Url.Action("getPayment", "Cancellation", Request.Url.Scheme)"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>
        <div class="cancellation">
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/js/Cancellation")
}
