@model AccountingWeb.Models.GeneralLedgerViewModel

@using (Ajax.BeginForm("CreateGL", "GL", new AjaxOptions() { HttpMethod = "POST", OnBegin = "beginAddGl", OnComplete = "createGl" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body bg-gray">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group col-lg-12">
                @Html.DropDownListFor(m => m.Category, Model.Categories, "", new { @class = "form-control create-gl-category" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.GeneralLedger.GeneralLedger, new { @class = "control-label col-md-4 pull-left" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.GeneralLedger.GeneralLedger, new { @class = "entry-gl", @maxlength = "7" })
                </div>
                @Html.ValidationMessageFor(model => model.GeneralLedger.GeneralLedger)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.GeneralLedger.Description, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.GeneralLedger.Description, new { @class = "entry-gl-description", @maxlength = "50" })
                </div>
                @Html.ValidationMessageFor(model => model.GeneralLedger.Description)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Create Ledger" class="btn btn-danger create-gl" disabled />
        <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" />
    </div>
}