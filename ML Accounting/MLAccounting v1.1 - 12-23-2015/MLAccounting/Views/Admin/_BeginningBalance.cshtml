@model MLAccounting.Models.BeginningBalanceModel


@using (Ajax.BeginForm("BeginningBalance", "Admin", null, new AjaxOptions() { OnComplete = "completeDataEntry", OnBegin = "loading", HttpMethod = "POST" }, new { @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.CorporateName, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.DropDownListFor(m => m.CorporateName, Model.CorpName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CorporateName)                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Branch, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.DropDownListFor(m => m.Branch, Model.Branches, new { @class = "form-control" })
                @Html.HiddenFor(m => m.BranchCode)
                @Html.HiddenFor(m => m.Zone)
                @Html.ValidationMessageFor(model => model.Branch)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GLDescription, new { @class = "control-label col-md-4" })
            <div class="col-md-7 input-group-sm">
                <div class="input-group">
                    <span class="input-group-addon search"><i class="glyphicon glyphicon-search"></i></span>
                    @Html.TextBoxFor(model => model.GLDescription, new { @class = "form-control", @readonly = true })
                </div>
                @Html.HiddenFor(m => m.GLNumber)
                @Html.ValidationMessageFor(m => m.GLDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Amount, new { @class = "form-control text-right", @data_valid = "[0-9,.-]" })
                @Html.ValidationMessageFor(model => model.Amount)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Beginning Balance" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>